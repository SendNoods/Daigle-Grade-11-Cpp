// Date: 22/03/2017
// Program Name: u3Tip
// Progrma Description: Calculates your tip based on Service quality.

#include "stdafx.h"
#include <iostream>



int _tmain(int argc, _TCHAR* argv[])
{
	double Meal, Tip, Tax;
	char Service;
	using namespace std;
	Tax = 1.13;

	std::cout << "How much did your meal cost? $";
	std::cin >> Meal;
	std::cout << "How was your Service? (E|S|P) ";
	std::cin >> Service;
	if (Service == 'E' || Service == 'e' ) {
		Tip = Meal * 0.2;
	}
	else if (Service == 'S' || Service == 's' ){
		Tip = Meal * 0.15;
	}
	else if (Service == 'P' || Service == 'p' ) {
		Tip = Meal * 0.1;
	}
	else {
		cout << "You broke it. Good job.";
		system("PAUSE");
	}
	std::cout << "Your meal cost is: $" << Meal * Tax << std::endl;
	std::cout << "Your tip is: $" << Tip;
	system("PAUSE");
	return 0;
}
