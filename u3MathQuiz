// Program Description: Gives random math questions

#include "stdafx.h"
#include <iostream>
#include <stdlib.h>  
#include <string>
#include <time.h>

using namespace std;
void randomNumGen(){
	srand(time(NULL));
	double Vari, NumA, NumB, Guess, Answer;
	std::string op = " - ";

	Vari = rand() % 4;
	NumA = rand() % 1000;
	NumB = rand() % 1000;

	if(Vari == 0){
		Answer = (NumA + NumB);
		op = " + ";
	} else if(Vari == 1){
		Answer = (NumA - NumB);
		op = " - ";
	} else if(Vari == 2){
		Answer = (NumA * NumB);
		op = " x ";
	} else{
		Answer = (NumA * NumB);
		op = " / ";
	}
		cout << NumA <<  op << NumB << " = ";
		cin >> Guess;
	
	if(Guess == Answer){
		cout << "\nCorrect!\n";
	} else {
		cout << "\nIncorrect!\nThe correct answer was: " << Answer <<"\n";
	}
}
int _tmain(int argc, _TCHAR* argv[])
{
int input;
	do{
		cout << "\n1)  Display Question?\n" << "0)  Exit\n: ";
		cin >> input;
	if(input == 1){
		randomNumGen();
	}
	}while(input != 0);
	return 0;
}
