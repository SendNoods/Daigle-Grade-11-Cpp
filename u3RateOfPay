// Program Name: u3RateOfPay
// Program Description: Calculates your salary

#include "stdafx.h"
#include <iostream>

using namespace std;

int _tmain(int argc, _TCHAR* argv[])
{
	double Salary, OvertimeMultiplier;
	int Hours, OvertimeHours;
// Asks questions about salary and time worked.
	cout << "What is your salary? \n\$";
	cin >> Salary;
	cout << "How many hours did you work? " << endl;
	cin >> Hours;
	cout << "What is your overtime muliplier? " << endl;
	cin >> OvertimeMultiplier;
	cout << "How many hours did you work overtime? " << endl;
	cin >> OvertimeHours;
// Calculates salary.
	cout << "Your salary is: $" << (Salary * Hours + (Salary * OvertimeMultiplier * OvertimeHours));
	system("PAUSE");
	return 0;
}
